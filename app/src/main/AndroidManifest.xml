<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.covidsweeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.COVIDSweeper">
        <activity
            android:name=".model.HelpActivity"
            android:screenOrientation="landscape"
            android:exported="false" />
        <activity
            android:name=".model.SettingsActivity"
            android:screenOrientation="landscape"
            android:exported="false" />
        <activity
            android:name=".model.GameActivity"
            android:screenOrientation="landscape"
            android:exported="false" />
        <activity
            android:name=".model.MainActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.COVIDSweeper.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>